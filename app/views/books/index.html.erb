<h1>Books</h1>
<table>
    <thead>
        <hr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
        </hr>
    </thead
    <tbody>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create book' %>
<% end %>